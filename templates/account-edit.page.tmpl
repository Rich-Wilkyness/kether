{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <!-- this div helps center the col-md-6. there are 12 columns, we designate size of 3 columns here and then size of 6, which leaves 3 which we do not need to declare. this way our form is in the middle 6 -->
        <div class="col-md-3"></div> 

        <div class="col-md-6">

            <h1 class="text-center mt-4">Register</h1>
            <form action="/account/edit" method="post" novalidate>
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}" >
                {{$user := index .Data "user"}}
                <input type="hidden" name="id" value="{{$user.ID}}" >

                <div class="form-group mt-5">
                    <label for="first_name">First Name:</label>
                    {{with .Form.Errors.Get "first_name"}}
                    <!-- the "." just displays what we passed from the with above -->
                        <div class="text-danger">{{.}}</div> 
                    {{end}}
                    <!-- the with is like an if statement. if there is an error, then "is-invalid" is added to the class, making the field light up red -->
                    <input required value="{{$user.User.FirstName}}" type="text" name="first_name" id="first_name" class="form-control {{with .Form.Errors.Get "first_name" }} is-invalid {{end}}">
                </div>
                <div class="form-group mt-5">
                    <label for="last_name">Last Name:</label>
                    {{with .Form.Errors.Get "last_name"}}
                    <!-- the "." just displays what we passed from the with above -->
                        <div class="text-danger">{{.}}</div> 
                    {{end}}
                    <!-- the with is like an if statement. if there is an error, then "is-invalid" is added to the class, making the field light up red -->
                    <input required value="{{$user.User.LastName}}" type="text" name="last_name" id="last_name" class="form-control {{with .Form.Errors.Get "last_name" }} is-invalid {{end}}">
                </div>
                <div class="form-group mt-5">
                    <label for="email">Email:</label>
                    {{with .Form.Errors.Get "email"}}
                    <!-- the "." just displays what we passed from the with above -->
                        <div class="text-danger">{{.}}</div> 
                    {{end}}
                    <!-- the with is like an if statement. if there is an error, then "is-invalid" is added to the class, making the field light up red -->
                    <input required value="{{$user.User.Email}}" type="email" name="email" id="email" class="form-control {{with .Form.Errors.Get "email" }} is-invalid {{end}}">
                </div>
                <hr>
                <button type="submit" class="btn btn-primary" value="Update">Update</button>

            </form>
        </div>
    </div>
</div>
{{end}}